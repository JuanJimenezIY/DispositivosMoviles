<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_marvel"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.SecondFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSecond"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        android:layout_margin="25dp"
        app:cardCornerRadius="12dp"

        android:backgroundTint="@color/background_dm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"



        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:scaleType="fitXY"
            android:src="@drawable/marvel_second_frag"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:gravity="bottom|center"
            android:text="@string/titulo_second_fragment"

            android:textSize="30sp"
            android:textStyle="bold"

            />
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/listViewSecond"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="25dp"

        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cardSecond"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/txtfilterSecond"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/background_dm"
            android:drawableRight="@drawable/baseline_search_24"
            android:hint="Buscar"
            android:textColor="@color/white"

            android:textColorHint="@color/font_color_ej"


            android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMarvelChars"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>